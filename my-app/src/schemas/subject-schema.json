{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
	"version": {
            "type": "string",
            "const": "0.1.0",
            "title": "Version"
	},
	"species": {
            "type": "string",
            "enum": ["Mus musculus", "Callithrix jacchus", "Macaca mulatta", "Homo sapiens"],
            "title": "Species"
	},
	"specimen_id": {
            "type": "string",
            "title": "Specimen ID"
	},
	"sex": {
            "type": "string",
            "enum": ["Female", "Male"],
            "title": "Sex"
	},   
	"date_of_birth": {
            "type": "string",
            "format": "date",
            "title": "Date of birth"   
	},
	"genotype": {
            "type": "string",
            "title": "Genotype"
	},
	"background_strain":{
            "type": "string",
            "enum": ["C57BL/6J", "BALB/c"],
            "title": "Background strain"
	},
	"source": {
            "type": "string",
            "title": "Source"
	},
	"restrictions": {
            "type": "string",
            "title": "Restrictions"
	},
	"breeding_group": {
            "type": "string",
            "title": "Breeding Group"
        },
	"maternal_id": {
            "type": "string",
            "title": "Maternal specimen ID"
	},
	"maternal_genotype": {
         "type": "string",
            "title": "Maternal genotype"
	},
	"paternal_id": {
            "type": "string",
            "title": "Paternal specimen ID"
	},
	"paternal_genotype": {
            "type": "string",
            "title": "Paternal genotype"
	},
	"light_cycle": {
            "type": "string",
            "enum": ["regular", "reverse"],
            "title": "Light cycle"
	},
	"home_cage_enrichment": {
            "type": "string",
            "enum": ["none", "running wheel", "other"],
            "title": "Home cage enrichment"
	},
	"notes": {
            "type": "string",
            "title": "Notes"
	}
    },
    "required": [
	"version",
	"species",
	"specimen_id",
	"sex",
	"date_of_birth",
	"genotype",
	"light_cycle"
    ]
}
