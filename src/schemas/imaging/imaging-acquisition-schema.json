{
   "title": "Acquisition",
   "description": "Description of an imaging acquisition session",
   "type": "object",
   "properties": {
      "describedBy": {
         "title": "Describedby",
         "default": "https://raw.githubusercontent.com/AllenNeuralDynamics/aind-data-schema/main/src/aind_data_schema/imaging/acquisition.py",
         "const": "https://raw.githubusercontent.com/AllenNeuralDynamics/aind-data-schema/main/src/aind_data_schema/imaging/acquisition.py",
         "type": "string"
      },
      "schema_version": {
         "title": "Version",
         "description": "schema version",
         "default": "0.4.0",
         "const": "0.4.0",
         "type": "string"
      },
      "experimenter_full_name": {
         "title": "Experimenter full name",
         "description": "First and last name of the experimenter.",
         "type": "string"
      },
      "subject_id": {
         "title": "Subject ID",
         "type": "string"
      },
      "instrument_id": {
         "title": "Instrument ID",
         "type": "string"
      },
      "session_start_time": {
         "title": "Session start time",
         "type": "string",
         "format": "date-time"
      },
      "session_end_time": {
         "title": "Session end time",
         "type": "string",
         "format": "date-time"
      },
      "tiles": {
         "title": "Acquisition tiles",
         "type": "array",
         "items": {
            "$ref": "#/definitions/Tile"
         }
      },
      "axes": {
         "title": "Acquisition axes",
         "type": "array",
         "items": {
            "$ref": "#/definitions/Axis"
         }
      },
      "chamber_immersion": {
         "title": "Acquisition chamber immersion data",
         "allOf": [
            {
               "$ref": "#/definitions/Immersion"
            }
         ]
      },
      "sample_immersion": {
         "title": "Acquisition sample immersion data",
         "allOf": [
            {
               "$ref": "#/definitions/Immersion"
            }
         ]
      },
      "active_objectives": {
         "title": "List of objectives used in this acquisition.",
         "type": "array",
         "items": {
            "type": "string"
         }
      },
      "local_storage_directory": {
         "title": "Local storage directory",
         "type": "string"
      },
      "external_storage_directory": {
         "title": "External storage directory",
         "type": "string"
      }
   },
   "required": [
      "experimenter_full_name",
      "subject_id",
      "instrument_id",
      "session_start_time",
      "session_end_time",
      "tiles",
      "axes",
      "chamber_immersion"
   ],
   "additionalProperties": false,
   "definitions": {
      "Scale3dTransform": {
         "title": "Scale3dTransform",
         "description": "Values to be vector-multiplied with a 3D position, equivalent to the diagonals of a 3x3 transform matrix.\nRepresents voxel spacing if used as the first applied coordinate transform.",
         "type": "object",
         "properties": {
            "type": {
               "title": "transformation type",
               "default": "scale",
               "type": "string"
            },
            "scale": {
               "title": "3D scale parameters",
               "minItems": 3,
               "maxItems": 3,
               "type": "array",
               "items": {
                  "type": "number"
               }
            }
         },
         "required": [
            "scale"
         ],
         "additionalProperties": false
      },
      "Translation3dTransform": {
         "title": "Translation3dTransform",
         "description": "Values to be vector-added to a 3D position. Often needed to specify a Tile's origin.",
         "type": "object",
         "properties": {
            "type": {
               "title": "transformation type",
               "default": "translation",
               "type": "string"
            },
            "translation": {
               "title": "3D translation parameters",
               "minItems": 3,
               "maxItems": 3,
               "type": "array",
               "items": {
                  "type": "number"
               }
            }
         },
         "required": [
            "translation"
         ],
         "additionalProperties": false
      },
      "Channel": {
         "title": "Channel",
         "description": "Description of a channel",
         "type": "object",
         "properties": {
            "channel_name": {
               "title": "Channel",
               "type": "string"
            },
            "laser_wavelength": {
               "title": "Wavelength",
               "minimum": 300,
               "maximum": 1000,
               "type": "integer"
            },
            "laser_wavelength_unit": {
               "title": "Laser wavelength unit",
               "default": "nanometer",
               "type": "string"
            },
            "laser_power": {
               "title": "Laser power",
               "maximum": 2000,
               "type": "number"
            },
            "laser_power_unit": {
               "title": "Laser power unit",
               "default": "milliwatt",
               "type": "number"
            },
            "filter_wheel_index": {
               "title": "Filter wheel index",
               "type": "integer"
            }
         },
         "required": [
            "channel_name",
            "laser_wavelength",
            "laser_power",
            "filter_wheel_index"
         ],
         "additionalProperties": false
      },
      "Tile": {
         "title": "Tile",
         "description": "Description of an image tile",
         "type": "object",
         "properties": {
            "coordinate_transformations": {
               "title": "Tile coordinate transformations",
               "type": "array",
               "items": {
                  "anyOf": [
                     {
                        "$ref": "#/definitions/Scale3dTransform"
                     },
                     {
                        "$ref": "#/definitions/Translation3dTransform"
                     }
                  ]
               }
            },
            "channel": {
               "title": "Channel",
               "allOf": [
                  {
                     "$ref": "#/definitions/Channel"
                  }
               ]
            },
            "file_name": {
               "title": "File name",
               "type": "string"
            },
            "notes": {
               "title": "Notes",
               "type": "string"
            },
            "imaging_angle": {
               "title": "Imaging angle",
               "default": 0,
               "type": "integer"
            },
            "imaging_angle_unit": {
               "title": "Imaging angle unit",
               "default": "degree",
               "type": "string"
            }
         },
         "required": [
            "coordinate_transformations",
            "channel"
         ],
         "additionalProperties": false
      },
      "AxisName": {
         "title": "AxisName",
         "description": "Image axis name",
         "enum": [
            "X",
            "Y",
            "Z"
         ]
      },
      "Direction": {
         "title": "Direction",
         "description": "Anatomical direction name",
         "enum": [
            "Left_to_right",
            "Right_to_left",
            "Anterior_to_posterior",
            "Posterior_to_anterior",
            "Inferior_to_superior",
            "Superior_to_inferior",
            "Other"
         ]
      },
      "Axis": {
         "title": "Axis",
         "description": "Description of an image axis",
         "type": "object",
         "properties": {
            "name": {
               "title": "Name",
               "allOf": [
                  {
                     "$ref": "#/definitions/AxisName"
                  }
               ]
            },
            "dimension": {
               "title": "Dimension",
               "description": "Reference axis number for stitching",
               "type": "integer"
            },
            "direction": {
               "description": "Tissue direction as the value of axis increases. If Other describe in notes.",
               "allOf": [
                  {
                     "$ref": "#/definitions/Direction"
                  }
               ]
            },
            "unit": {
               "title": "Axis physical units",
               "default": "micrometer",
               "type": "string"
            }
         },
         "required": [
            "name",
            "dimension",
            "direction"
         ],
         "additionalProperties": false
      },
      "Immersion": {
         "title": "Immersion",
         "description": "Description of immersion media",
         "type": "object",
         "properties": {
            "medium": {
               "title": "Immersion medium",
               "type": "string"
            },
            "refractive_index": {
               "title": "Index of refraction",
               "type": "number"
            }
         },
         "required": [
            "medium",
            "refractive_index"
         ],
         "additionalProperties": false
      }
   }
}
