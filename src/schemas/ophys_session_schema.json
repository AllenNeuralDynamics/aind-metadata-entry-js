{
   "title": "OphysSession",
   "description": "Description of an ophys session",
   "type": "object",
   "properties": {
      "describedBy": {
         "title": "Describedby",
         "default": "https://raw.githubusercontent.com/AllenNeuralDynamics/aind-data-schema/main/src/aind_data_schema/ophys/ophys_session.py",
         "const": "https://raw.githubusercontent.com/AllenNeuralDynamics/aind-data-schema/main/src/aind_data_schema/ophys/ophys_session.py",
         "type": "string"
      },
      "schema_version": {
         "title": "Schema Version",
         "description": "schema version",
         "default": "0.1.2",
         "const": "0.1.2",
         "type": "string"
      },
      "experimenter_full_name": {
         "title": "Experimenter full name",
         "description": "First and last name of the experimenter.",
         "type": "string"
      },
      "session_start_time": {
         "title": "Session start time",
         "type": "string",
         "format": "date-time"
      },
      "session_end_time": {
         "title": "Session end time",
         "type": "string",
         "format": "date-time"
      },
      "subject_id": {
         "title": "Subject ID",
         "type": "integer"
      },
      "session_type": {
         "title": "Session type",
         "type": "string"
      },
      "stimulus_protocol_id": {
         "title": "Stimulus protocol ID",
         "type": "string"
      },
      "iacuc_protocol": {
         "title": "IACUC protocol",
         "type": "string"
      },
      "rig_id": {
         "title": "Rig ID",
         "type": "string"
      },
      "lasers": {
         "title": "Lasers",
         "uniqueItems": true,
         "type": "array",
         "items": {
            "$ref": "#/definitions/Laser"
         }
      },
      "detectors": {
         "title": "Detectors",
         "uniqueItems": true,
         "type": "array",
         "items": {
            "$ref": "#/definitions/Detector"
         }
      },
      "notes": {
         "title": "Notes",
         "type": "string"
      }
   },
   "required": [
      "experimenter_full_name",
      "session_start_time",
      "subject_id",
      "session_type",
      "rig_id",
      "lasers"
   ],
   "additionalProperties": false,
   "definitions": {
      "LaserName": {
         "title": "LaserName",
         "description": "Laser name",
         "enum": [
            "Laser A",
            "Laser B",
            "Laser C",
            "Laser D",
            "Laser E"
         ]
      },
      "SizeUnit": {
         "title": "SizeUnit",
         "description": "units for sizes",
         "enum": [
            "pixel",
            "inch",
            "centimeter",
            "millimeter",
            "micrometer",
            "nanometer",
            "none"
         ]
      },
      "PowerUnit": {
         "title": "PowerUnit",
         "description": "Power units",
         "enum": [
            "milliwatt",
            "microwatt"
         ]
      },
      "Laser": {
         "title": "Laser",
         "description": "Description of a laser",
         "type": "object",
         "properties": {
            "name": {
               "title": "Name",
               "allOf": [
                  {
                     "$ref": "#/definitions/LaserName"
                  }
               ]
            },
            "wavelength": {
               "title": "Wavelength (nm)",
               "type": "integer"
            },
            "wavelength_unit": {
               "title": "Wavelength unit",
               "default": "nanometer",
               "allOf": [
                  {
                     "$ref": "#/definitions/SizeUnit"
                  }
               ]
            },
            "excitation_power": {
               "title": "Excitation power (mW)",
               "type": "number"
            },
            "excitation_power_unit": {
               "title": "Excitation power unit",
               "default": "milliwatt",
               "allOf": [
                  {
                     "$ref": "#/definitions/PowerUnit"
                  }
               ]
            }
         },
         "required": [
            "name",
            "wavelength"
         ],
         "additionalProperties": false
      },
      "TriggerType": {
         "title": "TriggerType",
         "description": "Types of detector triggers",
         "enum": [
            "Internal",
            "External"
         ]
      },
      "Detector": {
         "title": "Detector",
         "description": "Description of detector",
         "type": "object",
         "properties": {
            "name": {
               "title": "Name",
               "type": "string"
            },
            "exposure_time": {
               "title": "Exposure time (ms)",
               "type": "number"
            },
            "exposure_time_unit": {
               "title": "Exposure time unit",
               "default": "ms",
               "type": "string"
            },
            "trigger_type": {
               "title": "Trigger type",
               "allOf": [
                  {
                     "$ref": "#/definitions/TriggerType"
                  }
               ]
            }
         },
         "required": [
            "name",
            "exposure_time",
            "trigger_type"
         ],
         "additionalProperties": false
      }
   }
}