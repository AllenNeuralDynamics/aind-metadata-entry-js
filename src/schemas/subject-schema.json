{
        "title": "Subject",
        "description": "basic description of subject of data collection",
        "type": "object",
        "properties": {
           "describedBy": {
              "title": "Described by",
              "description": "The URL reference to the schema.",
              "default": "https://github.com/AllenNeuralDynamics/data_schema/blob/main/schemas/subject.py",
              "const": "https://github.com/AllenNeuralDynamics/data_schema/blob/main/schemas/subject.py",
              "type": "string"
           },
           "schema_version": {
              "title": "Version",
              "description": "schema version",
              "default": "0.2.0",
              "const": "0.2.0",
              "type": "string"
           },
           "species": {
              "title": "Species",
              "allOf": [
                 {
                    "$ref": "#/definitions/Species"
                 }
              ]
           },
           "subject_id": {
              "title": "Specimen ID",
              "description": "Unique identifier for the subject. If this is not a Allen LAS ID, indicate this in the Notes.",
              "type": "string"
           },
           "sex": {
              "title": "Sex",
              "allOf": [
                 {
                    "$ref": "#/definitions/Sex"
                 }
              ]
           },
           "date_of_birth": {
              "title": "Date of birth",
              "type": "string",
              "format": "date"
           },
           "genotype": {
              "title": "Genotype",
              "description": "Genotype of the animal providing both alleles",
              "type": "string"
           },
           "background_strain": {
              "title": "Background strain",
              "allOf": [
                 {
                    "$ref": "#/definitions/BackgroundStrain"
                 }
              ]
           },
           "source": {
              "title": "Source",
              "description": "If the subject was not bred in house, where was it acquired from.",
              "type": "string"
           },
           "restrictions": {
              "title": "Restrictions",
              "description": "Any restrictions on use or publishing based on specimen source",
              "type": "string"
           },
           "breeding_group": {
              "title": "Breeding Group",
              "type": "string"
           },
           "maternal_id": {
              "title": "Maternal specimen ID",
              "type": "string"
           },
           "maternal_genotype": {
              "title": "Maternal genotype",
              "type": "string"
           },
           "paternal_id": {
              "title": "Paternal specimen ID",
              "type": "string"
           },
           "paternal_genotype": {
              "title": "Paternal genotype",
              "type": "string"
           },
           "light_cycle": {
              "title": "Light cycle",
              "allOf": [
                 {
                    "$ref": "#/definitions/LightCycle"
                 }
              ]
           },
           "home_cage_enrichment": {
              "title": "Home cage enrichment",
              "allOf": [
                 {
                    "$ref": "#/definitions/HomeCageEnrichment"
                 }
              ]
           },
           "notes": {
              "title": "Notes",
              "type": "string"
           }
        },
        "required": [
           "species",
           "subject_id",
           "sex",
           "date_of_birth",
           "genotype"
        ],
        "definitions": {
           "Species": {
              "title": "Species",
              "description": "list of species",
              "enum": [
                 "Mus musculus",
                 "Callithrix jacchus",
                 "Macaca mulatta",
                 "Homo sapiens"
              ]
           },
           "Sex": {
              "title": "Sex",
              "description": "TODO",
              "enum": [
                 "Female",
                 "Male"
              ]
           },
           "BackgroundStrain": {
              "title": "BackgroundStrain",
              "description": "TODO",
              "enum": [
                 "C57BL/6J",
                 "BALB/c"
              ]
           },
           "LightCycle": {
              "title": "LightCycle",
              "description": "light cycle modes",
              "type": "object",
              "properties": {
                 "lights_on_time": {
                    "title": "Lights on time",
                    "description": "Time in UTC that lights were turned on",
                    "type": "string",
                    "format": "time"
                 },
                 "lights_off_time": {
                    "title": "Lights off time",
                    "description": "Time in UTC that lights were turned off",
                    "type": "string",
                    "format": "time"
                 }
              },
              "required": [
                 "lights_on_time",
                 "lights_off_time"
              ]
           },
           "HomeCageEnrichment": {
              "title": "HomeCageEnrichment",
              "description": "TODO",
              "enum": [
                 "none",
                 "running wheel",
                 "social housing",
                 "plastic tube",
                 "plastic shelter",
                 "other"
              ]
           }
        }
     }
     